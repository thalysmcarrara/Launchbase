{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="img"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div><input type="url" name="avatar_url" placeholder="http://"></div>
            </div>

            <div class="item">
                <div>Professor</div>
                <div><input type="text" name="name" placeholder="Nome Completo"></div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div> <input type="date" name="birth"></div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    <select name="instruction_degree">
                        <option value="Ensino Médio">Ensino Médio</option>
                        <option value="Ensino Superior">Ensino Superior</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de Ensino</div>
                <div>
                    <span><input type="radio" name="type_of_class" value="distancia" checked>Distância</span>
                    <span><input type="radio" name="type_of_class" value="presencial">Presencial</span>
                </div>
            </div>

            <div class="item">
                <div>Matérias</div>
                <div>
                    <input type="text" name="subjects">
                </div>
            </div>

            <button type="submit">Enviar</button>
    
        </section>
    </form>
{% endblock content %}